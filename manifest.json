{
  "manifest_version": 3,
  "name": "bighead",
  "version": "1.0",
  "permissions": [
      "activeTab",
      "storage",
      "contextMenus"
  ],
  "host_permissions": [
      "http://*/*",
      "https://*/*"
  ],
  "action": {
      "default_popup": "html/index.html"
  },
  "options_page": "html/options.html",
  "background": {
      "service_worker": "scripts/background.js"
  },
  "content_scripts": [
      {
          "matches": [
              "http://*/*",
              "https://*/*"
          ],
          "js": [
              "scripts/scrape.js",
              "scripts/api.js",
              "scripts/domUtils.js",
              "scripts/main.js"
          ]
      }
  ]
}
